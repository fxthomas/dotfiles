# Compiler Flags
cflags = -Wall
cppflags = -Wall
cudaflags = --compiler-options -fpermissive --compiler-options -ggdb -G -g

# Linker Flags
ldflags =
libs = 

# Common Rules
rule cc
  command = gcc $cflags -c $in -o $out

rule cpp
  command = g++ $cflags -c $in -o $out

rule cuda
  command = nvcc $cudaflags -c $in -o $out

rule link
  command = g++ $ldflags $libs -o $out $in

%PLACE_CURSOR%

